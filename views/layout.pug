doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="master.css")
        title Lorem Ipsum
    body 
        header.p-3.mb-3.border-bottom
            .container
                .d-flex.flex-wrap.align-items-center.justify-content-center.justify-content-lg-start
                    a.d-flex.align-items-center.mb-2.mb-lg-0.link-body-emphasis.text-decoration-none(href='/')
                        img.me-2(width='32' height='32' src="/images/logo.jpg")
                    ul.nav.col-12.col-lg-auto.me-lg-auto.mb-2.justify-content-center.mb-md-0
                        li
                            a.nav-link.px-2.link-secondary(href='/') Главная
                        li
                            a.nav-link.px-2.link-body-emphasis(href='/') Вторая страница
                        li
                            a.nav-link.px-2.link-body-emphasis(href='/') Третья страница
                        li
                            a.nav-link.px-2.link-body-emphasis(href='/') Четвертая станица
                    form.col-12.col-lg-auto.mb-3.mb-lg-0.me-lg-3(role='search')
                        input.form-control(type='search' placeholder='Search...' aria-label='Search')
                    .dropdown.text-end
                        a.d-block.link-body-emphasis.text-decoration-none.dropdown-toggle(href='#' data-bs-toggle='dropdown' aria-expanded='false')
                            img.rounded-circle(src='https://github.com/mdo.png' alt='mdo' width='32' height='32')
                        ul.dropdown-menu.text-small(style='')
                            li
                                a.dropdown-item(href='#') New project...
                            li
                                a.dropdown-item(href='#') Settings
                            li
                                a.dropdown-item(href='/profile') Profile
                            li
                                hr.dropdown-divider
                            li
                                a.dropdown-item(href='#') Sign out
        main.container
            block content
        script(src="/main.bundle.js")